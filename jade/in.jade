				.page-unit.active.page-unit_hello-honey
					.page-unit-gb
						.page-unit-bottle
							img(src="img/hello-honey-bottle.png" alt="")
						.info.is-l1
							.info--circle
							.info--box
								.info--box--close.round-hh
