				.page-unit.page-unit_ruby
					.page-unit-gb
						.page-unit-bottle
							img(src="img/ruby-bottle.png" alt="")
						.info.is-l1
							.info--circle
							.info--box
								.info--box--close.round-ruby
								.info--photo.is-men.round-ruby: img(src="img/karol_jan_2x.png" alt="")
