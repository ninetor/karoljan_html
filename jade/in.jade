									img(src="img/popup-icons_hello-honey_2x.png" alt="")

						.page-unit-newTag
							img(src="img/new-stamp_2x.png" alt="")
								
					.page-unit-content.page-unit-content_hello-honey
						+content ("hello-honey")
					


				.page-unit.page-unit_blonde
					.page-unit-gb
						.page-unit-bottle
							img(src="img/blonde-bottle.png" alt="")
						.info.is-l1
							.info--circle
							.info--box
								.info--box--close.round-blonde
								.info--photo.is-men.round-blonde: img(src="img/karol_jan_2x.png" alt="")
								.info--text
